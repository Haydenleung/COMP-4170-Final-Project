<%- include('partials/header') %>


    <div class="home">
        <div class="home-photo">
            <img class="photo" src="/images/cover.png" alt="cover image" />
        </div>
        <div class="home-login">
            <div class="login-container">
                <img class="logo" src="/images/logo.png" alt="company logo" />
                <div class="form-container">
                    <h3 class="main-title">Welcome back sippers!</h3>
                    <form action="/login" method="POST" class="form-main">
                        <div class="login-form">
                            <input type="email" class="forminput" name="username" placeholder="Username">
                        </div>
                        <div class="login-form">
                            <input type="password" class="forminput" name="password" placeholder="Password">
                        </div>
                        <div class="login-button">
                            <button type="submit" class="submitbtn">Login</button>
                            <button href="/register" class="regbtn">Register</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <%- include('partials/footer') %>